#
# Ghostty Terminal Configuration
#

#
# Theme & Appearance
#
theme = catppuccin-mocha.conf

#
# Font Settings
#
font-family = TX-02
font-size = 15
# Thicker fonts for better readability.
font-thicken = true

#
# Window Settings
#
window-padding-balance = true
window-padding-x = 5
window-padding-y = 0,10
window-width = 350
window-height = 472
# Minimal chrome.
window-decoration = none

#
# macOS Specific
#
# Use option as alt for terminal sequences.
macos-option-as-alt = true
# Cleaner look without titlebar.
macos-titlebar-style = hidden

#
# Cursor
#
# Beam cursor to match zsh vi mode.
cursor-style = bar
# No blinking.
cursor-style-blink = false

#
# Mouse & Clipboard
#
mouse-hide-while-typing = true
copy-on-select = true
# Warn on potentially dangerous pastes.
clipboard-paste-protection = true

#
# Shell Integration
#
shell-integration-features = true

#
# Links & URLs
#
link-url = true

#
# Scrollback
#
# Match zsh HISTSIZE.
scrollback-limit = 50000

#
# Updates
#
auto-update = download
auto-update-channel = tip

#
# Keybindings
#
keybind = shift+enter=text:\n
